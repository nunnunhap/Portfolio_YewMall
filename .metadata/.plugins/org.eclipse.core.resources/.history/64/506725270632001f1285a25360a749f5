<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yewmall.basic.user.UserMapper">

	<!-- 아이디 중복체크 -->
	<select id="idCheck" parameterType="String" resultType="String">
		SELECT
			mbsp_id
		FROM
			mbsp_tbl
		WHERE
			mbsp_id = #{mbsp_id}
	</select>

	<!-- 회원가입 저장 -->
	<insert id="join" parameterType="UserVo">
		INSERT INTO
		    mbsp_tbl(
		        mbsp_id,
			    mbsp_name,
			    mbsp_email,
			    mbsp_password,
			    mbsp_zipcode,
			    mbsp_addr,
			    mbsp_deaddr,
			    mbsp_phone,
			    mbsp_nick,
			    mbsp_receive)
		VALUES (
			#{mbsp_id},
		    #{mbsp_name},
		    #{mbsp_email},
		    #{mbsp_password},
		    #{mbsp_zipcode},
		    #{mbsp_addr},
		    #{mbsp_deaddr},
		    #{mbsp_phone},
		    #{mbsp_nick},
		    #{mbsp_receive} )
	</insert>

	<!-- 로그인 -->
	<select id="login" resultType="UserVo" parameterType="String">
		SELECT
		    mbsp_id,
		    mbsp_name,
		    mbsp_email,
		    mbsp_password,
		    mbsp_zipcode,
		    mbsp_addr,
		    mbsp_deaddr,
		    mbsp_phone,
		    mbsp_nick,
		    mbsp_receive,
		    mbsp_point,
		    mbsp_lastlogin,
		    mbsp_createdate,
		    mbsp_updatedate
		FROM
		    mbsp_tbl
		WHERE
			mbsp_id = #{mbsp_id}
	</select>

	<!-- ID 찾기 -->
	<select id="idfind" resultType="String">
		SELECT
		    mbsp_id
		FROM
		    mbsp_tbl
		WHERE
			mbsp_name = #{mbsp_name}
		AND
			mbsp_email = #{mbsp_email}
	</select>
	
	<!-- PW 찾기 -->
	<select id="pwfind" resultType="String" parameterType="map">
		SELECT
			mbsp_email
		FROM
			mbsp_tbl
		WHERE
			mbsp_id = #{mbsp_id}
		AND
			mbsp_name = #{mbsp_name}
		AND
			mbsp_email = #{mbsp_email}
	</select>
	
	<!-- PW 업데이트 -->
	<update id="tempPwUpdate">
	
	</update>

	<!-- 회원정보 수정 -->
	<update id="modify" parameterType="UserVo">
		UPDATE
		    mbsp_tbl
		SET
			mbsp_nick = #{mbsp_nick},
			mbsp_email = #{mbsp_email},
			mbsp_zipcode = #{mbsp_zipcode},
		    mbsp_addr = #{mbsp_addr},
		    mbsp_deaddr = #{mbsp_deaddr},
		    mbsp_phone = #{mbsp_phone},
		    mbsp_receive = #{mbsp_receive}
		WHERE
		    mbsp_id = #{mbsp_id}
	</update>




</mapper>